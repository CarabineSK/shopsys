{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Login'|trans }}
{% endblock %}

{% block main_content %}
    {{ form_errors(form) }}

    {{ form_start(form, {attr: {'multipleForm': true}}) }}

        <h1>{{ 'Login'|trans }}</h1>

        {{ form_row(form.email, {label: 'E-mail'|trans} ) }}

        {{ form_row(form.password, {label: 'Password'|trans} ) }}

        {{ form_row(form.rememberMe, {
            label: 'Remember my login'|trans,
            icon: {
                type: 'info',
                title: 'We will remember your login on this computer for 30 days.'|trans
            }
        }) }}

        <dl class="form-line">
            <dt></dt>
            <dd>
                {{ form_row(form.login, {label: 'Log in'|trans}) }}
            </dd>
        </dl>
        <dl class="form-line">
            <dt></dt>
            <dd>
                <a href="{{ url('front_registration_reset_password') }}">{{ 'Forgot your password?'|trans }}</a>
            </dd>
        </dl>

    {{ form_end(form) }}

{% endblock %}