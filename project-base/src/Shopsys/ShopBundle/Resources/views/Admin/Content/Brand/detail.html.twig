{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Brand'|trans }}{% endblock %}
{% block h1 %}{{ 'Brand'|trans }}{% endblock %}

{% block main_content %}
	{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="wrap-border">
			{{ form_id(brand|default(null)) }}
			{{ form_row(form.name, { label: 'Name'|trans}) }}
			{{ form_row(form.descriptions, { label: 'Description'|trans}) }}
			{% block brand_urls %}{% endblock %}
		</div>

		<div class="form-group">
			<div class="form-group__title">
				{{ 'Picture'|trans }}
			</div>
			{% block image %}{% endblock %}
			{{ form_row(form.image, { label: 'Upload picture'|trans, infoText: 'You can upload following formats: PNG, JPG, GIF'|trans }) }}
		</div>

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				<a href="{{ url('admin_brand_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
				{{ form_save(brand|default(null), form) }}
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}
{% endblock %}
