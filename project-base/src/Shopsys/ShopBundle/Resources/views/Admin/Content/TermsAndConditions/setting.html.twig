{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Terms and conditions settings'|trans }}{% endblock %}
{% block h1 %}{{ 'Terms and conditions settings'|trans }}{% endblock %}

{% block main_content %}

	{{ render(controller('SS6ShopBundle:Admin/Domain:domainTabs')) }}

	{{ form_start(form) }}
		<div class="form-group">
			<div class="form-group__title">
				{{ 'Settings'|trans }}
			</div>
			{{ form_row(form.termsAndConditionsArticle, { label: 'Terms and conditions'|trans, icon: { title: 'Choose article, which will serve as terms and conditions with which the customer has to agree with when creating order.'|trans } }) }}
		</div>

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				{{ form_widget(form.save, { label: 'Save changes'|trans }) }}
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}

{% endblock %}