{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Google analytics'|trans }}{% endblock %}
{% block h1 %}{{ 'Google analytics'|trans }}{% endblock %}

{% block main_content %}
	{{ render(controller('SS6ShopBundle:Admin/Domain:domainTabs')) }}

	{{ form_start(form) }}
		{{ form_errors(form) }}

		{{ form_row(form.trackingId, { label: 'Tracking ID'|trans}) }}

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				{{ form_row(form.save, { label: 'Save'|trans }) }}
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}
{% endblock %}