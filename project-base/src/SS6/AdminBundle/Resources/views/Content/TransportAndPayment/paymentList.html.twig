<h2>Platby</h2>
		
{% if payments|length %}
	<a href="{{ url('admin_payment_new') }}">Vytvořit platbu</a>
	
	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Název</th>
				<th>Cena</th>
				<th>Viditelné</th>
				<th>Akce</th>
			</tr>
		</thead>
		<tbody>
			{% for payment in payments %}
				<tr>
					<td><a href="{{ url('admin_payment_edit', {id: payment.id}) }}">{{ payment.name }}</a></td>
					<td>{{ payment.price }} Kč</td>
					<td>
						{% if payment.hidden %}
							Skryté
						{% else %}
							Viditelné
						{% endif %}
					</td>
					<td>
						<a href="{{ url('admin_payment_edit', {id: payment.id}) }}">Upravit</a>
						<a href="{{ url('admin_payment_delete', {id: payment.id}) }}" onclick="return confirm('Opravdu chcete tuto platbu smazat?')">Smazat</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
	<p>
		Doposud nebyly vytvořeny žádné platby. Nejdříve nějakou <a href="{{ url('admin_payment_new') }}">vytvořte</a>.
	</p>
{% endif %}