</div>

<ul class="nav navbar-nav">
	{% for item in menu.regularItems %}
		<li>
			{% if item.route %}
				<a href="{{ url(item.route, item.routeParameters) }}">{{ item.label }}</a>
			{% else %}
				<a href="#">{{ item.label }}</a>
			{% endif %}
		</li>
	{% endfor %}
</ul>

