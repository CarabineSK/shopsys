	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">Nastavení <b class="caret"></b></a>
		<ul class="dropdown-menu">
			{% for item in menu.settingsItem.items %}
				<li>
					{% if item.route %}
						<a href="{{ url(item.route, item.routeParameters) }}">{{ item.label }}</a>
					{% else %}
						<a href="#">{{ item.label }}</a>
					{% endif %}
				</li>
			{% endfor %}
		</ul>
	</li>
	<li>
		<a href="{{ url('admin_logout') }}">Odhlásit</a>
	</li>
</ul>
