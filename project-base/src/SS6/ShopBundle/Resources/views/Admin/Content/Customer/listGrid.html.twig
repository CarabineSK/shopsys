{% extends '@SS6Shop/Admin/Grid/PKGrid.html.twig' %}

{% block pkgrid_value_cell_id_name %}
	<a href="{{ url('admin_customer_edit', { id: row.id }) }}">{{ value }}</a>
{% endblock %}

{% block pkgrid_value_cell_id_orders_sum_price %}
	{{ value|price }}
{% endblock %}

{% block pkgrid_value_cell_id_last_order_on %}
	{% if value is empty %}
		-
	{% else %}
		{{ value|date('j.n.Y') }}
	{% endif %}
{% endblock %}

{% block pkgrid_no_data %}
	Nebyli nalezeni žádní zákazníci. Nejprve musíte nějakého vytvořit.
{% endblock %}

{% block pkgrid_pager_totalcount %}
	{% set entityName = 'zákazníků' %}
	{{ parent() }}
{% endblock %}