{{ form_start(form) }}
	{{ form_errors(form) }}

	<p>
		Opravdu chcete smazat stav objednávek <strong>{{ orderStatus.name }}</strong>?<br />
		Tento stav má přiřazeno {{ ordersCount }} objednávek, vyberte stav, který jim má být nově nastaven:
	</p>

	{{ form_row(form.newStatus, { label: 'Nový stav', id: 'js-order-status-delete-status-select', attr: {class: 'form-line--size-window'} }) }}

	<div class="mt-1">
		<div id="js-order-status-delete-submit-container" data-toggle="tooltip" data-placement="right" class="right">
			{{ form_widget(form.delete, { label: 'Smazat', id: 'js-order-status-delete-submit', attr: {class: 'btn-danger'} }) }}
		</div>

		<a href="" onclick="SS6.window.close({{ windowId|json_encode }}); return false;" class="btn btn-primary left">Zpět</a>
	</div>
	
	<div class="clear">
		<p>
		Informace o změně stavu <strong>nebude</strong> zákazníkovi emailem zaslána.
		</p>
	</div>
{{ form_end(form) }}
