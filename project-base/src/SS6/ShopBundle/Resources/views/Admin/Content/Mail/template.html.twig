{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- Nastavení šablon e-mailů{% endblock %}
{% block h1 %}Nastavení šablon e-mailů{% endblock %}

{% block main_content %}

	<div class="row">

		<div class="col-xs-12 col-lg-10">

			{{ render(controller('SS6ShopBundle:Admin/Domain:domainTabs')) }}

			{% macro mailTemplate(name, template, variables) %}
				<div class="toggle-container box-expand">
						<h2 class ="toggle-headline box-expand__heading">
							<span class="in-arrows in-arrows--down">
								{{ name }}
							</span>
						</h2>
						<div class="toggle-content toggle-close box-expand__hidden">
							{{ form_row(template.subject, { label: 'Předmět'}) }}
							{{ form_row(template.body, { label: 'Text'}) }}
							{{ form_widget(template.save, { label: 'Uložit změny ve všech šablonách'}) }}

							<div class="row">
								<div class="col-xs-12 col-lg-10">
									<div class="table-responsive grid_body">
										<table class="table table-striped table-hover">
											<thead>
												<tr class="grid-row-titles">
													<th>Použitelné proměnné</th>
												</tr>
											</thead>
											<tbody>
												{% for key in variables|keys %}
													<tr class="grid-row-cells">
														<td>{{ key }}</td>
														<td>{{ variables[key] }}</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
				</div>
			{% endmacro%}

			{{ form_start(form) }}
			{{ form_errors(form) }}
				{% for orderStatusId, orderStatusTemplate in form.orderStatusTemplates %}
					{% set orderStatus = orderStatusesIndexedById[orderStatusId] %}

					{{ _self.mailTemplate(orderStatus.name, orderStatusTemplate, orderStatusVariables) }}

				{% endfor %}

				{{ _self.mailTemplate('Potvrzení registrace', form.registrationTemplate, registrationVariables) }}

			{{ form_end(form) }}

		</div>

	</div>

{% endblock %}
