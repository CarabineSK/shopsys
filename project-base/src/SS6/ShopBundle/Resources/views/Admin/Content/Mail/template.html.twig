{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Nastavení šablon e-mailů'|trans }}{% endblock %}
{% block h1 %}{{ 'Nastavení šablon e-mailů'|trans }}{% endblock %}

{% block main_content %}

	<div class="row">

		<div class="col-xs-12 col-lg-10">

			{{ render(controller('SS6ShopBundle:Admin/Domain:domainTabs')) }}

			{% macro mailTemplate(name, template, variables, variablesInfoText, sendMail) %}
				<div class="toggle-container box-expand">
						<h2 class ="toggle-headline box-expand__heading">
							<span class="in-arrows in-arrows--down">
								{{ name }}
							</span>
						</h2>
						<div class="toggle-content toggle-close box-expand__hidden">
							{{ form_row(template.subject, { label: 'Předmět'|trans}) }}
							{{ form_row(template.body, { label: 'Text'|trans}) }}
							{% if sendMail is not null %}
								{{ form_row(template.sendMail, { label: sendMail }) }}
							{% else %}
								{{ form_widget(template.sendMail, { 'attr': {'class': 'hidden'} }) }}
							{% endif %}
							{{ form_widget(template.save, { label: 'Uložit změny ve všech šablonách'|trans}) }}

							<div class="row">
								<div class="col-xs-12 col-lg-10">
									<div class="table-responsive grid_body">
										<table class="table table-striped table-hover">
											<thead>
												<tr class="grid-row-titles">
													<th>
														{{ 'Použitelné proměnné'|trans }}
														{% if variablesInfoText is not null %}
															<i class="fa fa-info-circle cursor-help js-tooltip" data-toggle="tooltip" data-placement="right" title="" data-original-title="{{ variablesInfoText }}"></i>
														{% endif %}
													</th>
												</tr>
											</thead>
											<tbody>
												{% for key in variables|keys %}
													<tr class="grid-row-cells">
														<td>{{ key }}</td>
														<td>{{ variables[key] }}</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
				</div>
			{% endmacro%}

			{{ form_start(form) }}
			{{ form_errors(form) }}
				{% for orderStatusId, orderStatusTemplate in form.orderStatusTemplates %}
					{% set orderStatus = orderStatusesIndexedById[orderStatusId] %}
					{% if orderStatus.type == constant('TYPE_NEW', orderStatus) %}
						{{ _self.mailTemplate(
								orderStatus.name,
								orderStatusTemplate,
								orderStatusVariables,
								'V předmětu lze použít proměnné pouze pro číslo objednávky a datum a čas vytvoření objednávky'|trans,
								'Zasílat potvrzení o přijetí objednávky'|trans
						) }}
					{% else %}
						{{ _self.mailTemplate(
								orderStatus.name,
								orderStatusTemplate,
								orderStatusVariables,
								'V předmětu lze použít proměnné pouze pro číslo objednávky a datum a čas vytvoření objednávky'|trans,
								'Zasílat e-mail o změně na tento stav'|trans
						) }}
					{% endif %}
				{% endfor %}

				{{ _self.mailTemplate('Potvrzení registrace'|trans, form.registrationTemplate, registrationVariables) }}

			{{ form_end(form) }}

		</div>

	</div>

{% endblock %}
