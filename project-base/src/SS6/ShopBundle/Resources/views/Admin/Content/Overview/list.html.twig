{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- Identifikace eshopu{% endblock %}
{% block h1 %}Domény eshopu{% endblock %}

{% block main_content %}
	<div class="row">
		<div class="col-xs-12 col-lg-10">
			<div class="table-responsive grid_body">
				<table class="table table-striped table-hover">
					<thead>
						<tr class="grid-row-titles">
							<th>Název domény</th>
							<th>Jazyk</th>
						</tr>
					</thead>
					<tbody>
						{% for domainConfig in domainConfigs %}
							<tr class="grid-row-cells">
								<td>{{ domainConfig.domain }}</td>
								<td>{{ localeFlag(domainConfig.locale) }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock%}