{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- Karta zboží{% endblock %}
{% block h1 %}Karta zboží{% endblock %}

{% block panel %}
	<ul class="nav nav-panel">
		<li>
			<span>Ediace zboží</span>
		</li>
		<li>
			<a href="{{ url('admin_product_list') }}">Zpět na seznam zboží</a>
		</li>
	</ul>
{% endblock %}

{% block mainContent %}
	<div class="row">

		<div class="col-xs-12 col-lg-8">
			
			{{ form_start(form) }}
				{{ form_errors(form) }}

				{{ form_row(form.id) }}
				
				{% block product_url %}{% endblock %}
				
				{{ form_row(form.name, { label: 'Název'}) }}
				{{ form_row(form.catnum, { label: 'Katalogové číslo'}) }}
				{{ form_row(form.partno, { label: 'PartNo (výrobní číslo)'}) }}
				{{ form_row(form.ean, { label: 'EAN'}) }}
				{{ form_row(form.description, { label: 'Popis'}) }}
				{{ form_row(form.price, { label: 'Cena'}) }}
				{{ form_row(form.sellingFrom, { label: 'Datum vložení'}) }}
				{{ form_row(form.sellingTo, { label: 'Datum stažení'}) }}
				{{ form_row(form.stockQuantity, { label: 'Skladem'}) }}
				{{ form_row(form.hidden, { label: 'Skryté'}) }}
				{{ form_row(form.save, { label: 'Uložit'}) }}

			{{ form_end(form) }}
		</div>
		
	</div>


		
{% endblock %}