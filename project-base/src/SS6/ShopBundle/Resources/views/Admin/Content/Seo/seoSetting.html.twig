{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Nastavení SEO atributů'|trans }}{% endblock %}
{% block h1 %}{{ 'Nastavení SEO atributů'|trans }}{% endblock %}

{% block main_content %}

	{{ render(controller('SS6ShopBundle:Admin/Domain:domainTabs')) }}

	{{ form_start(form) }}
		<div class="form-group">
			<div class="form-group__title">
				{{ 'Nastavení'|trans }}
			</div>
			{{ form_row(form.title, { label: 'Titulek'|trans }) }}
			{% set infoText = 'Doplněk k titulku bude připojen za všechny titulky na eshopu. Např. pokud nastavíte doplněk na " | Můj obchod" a název zboží je "D-Link", bude výsledný titulek u tohoto zboží "D-Link | Můj obchod"' %}
			{{ form_row(form.titleAddOn, { label: 'Doplněk k titulku'|trans, icon: { title: infoText } }) }}
			{{ form_row(form.metaDescription, { label: 'Meta description'|trans }) }}
		</div>

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				{{ form_widget(form.save, { label: 'Uložit změny'|trans}) }}
			{% endblock %}
		{% endembed %}

	{{ form_end(form) }}

{% endblock %}