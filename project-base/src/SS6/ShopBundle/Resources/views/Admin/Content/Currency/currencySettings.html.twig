{{ form_start(form) }}
	<div class="wrap-border form-group">
		<div class="form-group__title">
			{{ 'Nastavení'|trans }}
		</div>
		{{ form_row(form.defaultCurrency, { label: 'Výchozí měna administrace'|trans, icon: { title: 'Při změně výchozí měny nedochází k žádnému přepočtu cen'|trans } }) }}
		{% for item in form.domainDefaultCurrencies %}
			{{ form_row(item, { label: 'Základní měna frontendu %domainName%'|trans({'%domainName%': domainNames[item.vars.name]})}) }}
		{% endfor %}
	</div>

	{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
		{% block fixed_bar_content %}
			{{ form_widget(form.save, { label: 'Uložit změny'|trans}) }}
		{% endblock %}
	{% endembed %}
{{ form_end(form) }}
