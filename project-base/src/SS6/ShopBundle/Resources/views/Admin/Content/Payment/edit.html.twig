{% extends '@SS6Shop/Admin/Content/Payment/detail.html.twig' %}

{% block title %}- {{ 'Editace platby'|trans }} - {{ paymentDetail.payment.name }}{% endblock %}
{% block h1 %}{{ 'Editace platby'|trans }} - {{ paymentDetail.payment.name }}{% endblock %}

{% block payment_base_prices %}
	<div id="transport_prices" class="table-form__wrap">
		<table class="table-form">
			<thead>
				<tr class="table-form__row">
					<th class="table-form__cell">{{ inputPriceLabel() }}</th>
					<th class="table-form__cell">{{ 'Cena bez DPH'|trans }}</th>
					<th class="table-form__cell">{{ 'Cena s DPH'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for currencyId, currency in currencies %}
					<tr class="table-form__row">
						<td class="table-form__cell">
							{{ form_row(
								form.prices[currencyId],
								{label: 'Základní cena v %currencyCode%'|trans({'%currencyCode%': currency.code}), symbolAfterInput:currencySymbolByCurrencyId(currencyId) }
							) }}
						</td>
						<td class="table-form__cell">{{ paymentDetail.basePrices[currencyId].priceWithoutVat|priceWithCurrencyByCurrencyId(currencyId) }}</td>
						<td class="table-form__cell">{{ paymentDetail.basePrices[currencyId].priceWithVat|priceWithCurrencyByCurrencyId(currencyId) }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block image %}
	<div class="form-line">
		<label class="form-line__label">
			{{ 'Obrázek'|trans }}:
		</label>
		<div class="form-line__side">
			<div class="form-line__item">
				{{ image(paymentDetail.payment, { size: 'original', height: 100 }) }}
			</div>
		</div>
	</div>
{% endblock %}