{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}
	- Platba
{% endblock %}

{% block h1 %}
	Platba
{% endblock %}

{% block main_content %}
	<div class="row">

		<div class="col-xs-12 col-lg-10">

			{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="form-box">
					{% block payment_id %}
						{{ form_widget(form.id, { type: 'hidden' }) }}
					{% endblock %}

					{{ form_row(form.name, { label: 'Název'}) }}
					{{ form_row(form.hidden, { label: 'Skryté', attr: {class: 'form-line--between'} }) }}
					{{ form_row(form.price, { label: inputPriceLabel()}) }}
					{{ form_row(form.vat, { label: 'DPH'}) }}
					{% block payment_base_prices %}{% endblock %}
					{{ form_row(form.transports, { label: 'Dopravy', empty_message: 'Musíte nejdřív nějakou dopravu vytvořit.'}) }}
					{{ form_row(form.description, { label: 'Popis'}) }}
				</div>

				<div class="form-box">
					{% block image %}{% endblock %}
					{{ form_row(form.image, { label: 'Nahrát obrázek'}) }}
				</div>

				{% block payment_save %}{% endblock %}
				<a href="{{ url('admin_transportandpayment_list') }}" class="btn btn-default">Zpět na přehled</a>
			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}