{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}
	- {{ 'Platba'|trans }}
{% endblock %}

{% block h1 %}
	{{ 'Platba'|trans }}
{% endblock %}

{% block main_content %}
	<div class="row">

		<div class="col-xs-12 col-lg-10">

			{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="wrap-group">
					{{ form_id(paymentDetail.payment|default(null)) }}

					{{ form_row(form.paymentData.name, { label: 'Název'}) }}
					{{ form_row(form.paymentData.domains, { label: 'Doména' }) }}
					{{ form_row(form.paymentData.hidden, { label: 'Skryté', attr: {class: 'form-line--between'} }) }}
					{{ form_row(form.paymentData.vat, { label: 'DPH'}) }}
					{% block payment_base_prices %}{% endblock %}
					{{ form_row(form.paymentData.transports, { label: 'Dopravy', empty_message: 'Musíte nejdřív nějakou dopravu vytvořit.'}) }}
					{{ form_row(form.paymentData.description, { label: 'Popis'}) }}
					{{ form_row(form.paymentData.instructions, { label: 'Pokyny'}) }}
				</div>

				<div class="wrap-group">
					{% block image %}{% endblock %}
					{{ form_row(form.paymentData.image, { label: 'Nahrát obrázek'}) }}
				</div>

				<div class="window-fixed-bar">
 					<div class="window-fixed-bar__buttons">
						{{ form_save(paymentDetail|default(null), form) }}
						<a href="{{ url('admin_transportandpayment_list') }}" class="btn btn-default">{{ 'Zpět na přehled'|trans }}</a>
					</div>
				</div>
			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}