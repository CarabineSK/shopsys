{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Vytvořit variantu'|trans }}{% endblock %}
{% block h1 %}{{ 'Vytvořit variantu'|trans }}{% endblock %}

{% block main_content %}
	<div class="row">
		<div class="col-xs-12 col-lg-10">
			{{ form_start(form) }}
				<div class="wrap-group">
					{{ form_row(form.mainVariant, { label: 'Hlavní zboží'|trans }) }}
					{{ form_row(form.variants, { label: 'Varianty'|trans }) }}
					{{ form_row(form.save, { label: 'Vytvořit'|trans }) }}
				</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}