{% extends '@SS6Shop/Admin/Grid/Grid.html.twig' %}

{% block grid_no_data %}
	{{ 'Nebylo nalezeno žádné zboží.'|trans }}
{% endblock %}

{% block grid_value_cell_id_name %}
	<a href="{{ url('admin_product_edit', { id: row.p.id }) }}">{{ value }}</a>
{% endblock %}

{% block grid_value_cell_id_visible %}
	<span class="grid_boolean_{{ value ? 'true' : 'false' }} in-semaphore in-semaphore--{{ value ? 'true' : 'false' }}" title="{{ value ? 'Ano'|trans : 'Ne'|trans }}"></span>
	{% if not row.p.sellable %}
		<i class="fa fa-shopping-cart cart-disabled" title="{{ 'Zboží je vyřazeno z prodeje'|trans }}"></i>
	{% endif %}
{% endblock %}

{% block grid_value_cell_id_price %}
	{{ row.priceForProductList|priceWithCurrencyAdmin }}
{% endblock %}

{% block grid_pager_totalcount %}
	{% set entityName = 'zboží'|trans %}
	{{ parent() }}
{% endblock %}
