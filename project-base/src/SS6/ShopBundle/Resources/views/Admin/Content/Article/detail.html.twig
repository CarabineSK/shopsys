{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Článek'|trans }}{% endblock %}
{% block h1 %}{{ 'Článek'|trans }}{% endblock %}

{% block main_content %}
	<div class="row">

		<div class="col-xs-12 col-lg-10">
			{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="wrap-group">
					{{ form_id(article|default(null)) }}

					{% block article_domain %}{% endblock %}
					{% block article_url %}{% endblock %}

					{{ form_row(form.name, { label: 'Název'|trans}) }}
					{{ form_row(form.text, { label: 'Text'|trans}) }}
					{% block article_urls %}{% endblock %}
				</div>

				<div class="window-fixed-bar">
					<div class="window-fixed-bar__buttons">
						<a href="{{ url('admin_article_list') }}" class="btn btn-default">{{ 'Zpět na přehled'|trans }}</a>
						{{ form_save(article|default(null), form) }}
					</div>
				</div>
			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}