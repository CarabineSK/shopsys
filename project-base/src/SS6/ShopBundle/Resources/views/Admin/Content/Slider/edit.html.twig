{% extends '@SS6Shop/Admin/Content/Slider/detail.html.twig' %}

{% block title %}- {{ 'Editace stránky slideru'|trans }} - {{ sliderItem.name }}{% endblock %}
{% block h1 %}{{ 'Editace stránky slideru'|trans }} - {{ sliderItem.name }}{% endblock %}

{% block domain %}
	<div class="form-line">
		<label class="form-line__label">{{ 'Doména'|trans }}:</label>
		<div class="form-line__side">
			<div class="form-line__item">
				<input type="text" value="{{ getDomainName(sliderItem.domainId) }}" class="input" readonly="readonly" />
			</div>
		</div>
	</div>
{% endblock %}

{% block image %}
	<div class="form-line">
		<label class="form-line__label">
			{{ 'Obrázek'|trans }}:
		</label>
		<div class="form-line__line">
			{{ image(sliderItem, { size: 'original', height: 100 }) }}
		</div>
	</div>
{% endblock %}
