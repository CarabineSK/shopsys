{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Nejprodávanější zboží kategorie'|trans }} {{ categoryName }}{% endblock %}
{% block h1 %}{{ 'Nejprodávanější zboží kategorie'|trans }} {{ categoryName }}{% endblock %}

{% block main_content %}
	{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="js-form-group">
			{{ form_errors(form.bestsellingProducts) }}

			<div id="{{ form.bestsellingProducts.vars.id }}" class="wrap-group">
				{% for productForm in form.bestsellingProducts %}
					<div class="form-line js-bestselling-product-container">
						<label>{{ loop.index }}</label>
						{{ form_widget(productForm) }}
					</div>
				{% endfor %}
			</div>
		</div>

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				{{ form_widget(form.save, {label: 'Uložit'|trans}) }}
				<a href="{{ url('admin_bestsellingproduct_list') }}" class="btn-link-style">{{ 'Zpět na přehled'|trans }}</a>
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}

{% endblock %}