{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Přehled objednávek'|trans }}{% endblock %}
{% block h1 %}{{ 'Přehled objednávek'|trans }}{% endblock %}

{% block main_content %}
	<div class="row">
		<div class="col-xs-12 col-lg-10">
			{{ form_start(quickSearchForm) }}
				<div class="wrap-box form-inline mb-1 mt-1" id="js-quick-search">
					{{ form_widget(quickSearchForm.text) }}
					{{ form_widget(quickSearchForm.save, { label: 'Vyhledat'|trans, full_name: ''}) }}
					<i class="fa fa-info cursor-help js-tooltip"
					 data-toggle="tooltip" data-placement="right"
					 title="{{ 'Vyhledávání hledá v číslu objednávky (přesná shoda), emailu registrovaného zákazníka, emailu zákazníka v objednávce, příjmení zákazníka a názvu firmy. Je možné používat operátory * a ?.'|trans }}"
					></i>
				</div>
			{{ gridView.render() }}
		</div>
	</div>
{% endblock %}