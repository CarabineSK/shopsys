{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- Stav objednávek{% endblock %}
{% block h1 %}Stav objednávek{% endblock %}

{% block main_content %}
	<div class="row">

		<div class="col-xs-12 col-lg-10">

			{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="wrap-group">
					{{ form_widget(form.id, { type: 'hidden' }) }}
					{{ form_row(form.name, { label: 'Název' }) }}
				</div>

				{{ form_save(orderStatus|default(null), form) }}
				<a href="{{ url('admin_orderstatus_list') }}" class="btn btn-default">Zpět na přehled</a>
			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}