{% extends 'SS6ShopBundle::Admin/Layout/layoutBlank.html.twig' %}

{% block title %}
	- Přihlášení
{% endblock %}

{% block content %}
	{% if error %}
		<p class="message message-danger">{{ error }}</p>
	{% endif %}

	{{ form_start(form, {attr: {class: 'form-signin', role: 'form'}}) }}
		{{ form_errors(form) }}

		<h1 class="form-signin-heading">Administrace</h1>
		
		{{ form_errors(form.username) }}
		{{ form_widget(form.username, {attr: {class: 'form-control', placeholder: 'Uživatelské jméno'}}) }}

		{{ form_errors(form.password) }}
		{{ form_widget(form.password, {attr: {class: 'form-control', placeholder: 'Heslo'}}) }}

		{{ form_widget(form.login, {label: 'Přihlásit', attr: {class: 'btn btn-lg btn-primary btn-block'}}) }}

	{{ form_end(form) }}

{% endblock %}