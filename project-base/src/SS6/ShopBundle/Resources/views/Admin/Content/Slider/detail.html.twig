{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}
	- {{ 'Stránka slideru'|trans }}
{% endblock %}

{% block h1 %}
	{{ 'Stránka slideru'|trans }}
{% endblock %}

{% block main_content %}

	{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="wrap-border">
			{{ form_id(sliderItem|default(null)) }}
			{% block domain %}{% endblock %}
			{{ form_row(form.name, { label: 'Název'|trans, icon: { title: 'Název slouží pouze pro interní použití v rámci administrace' } }) }}
			{{ form_row(form.link, { label: 'Odkaz'|trans, infoText: 'Můžete nahrávat formáty: PNG, JPG a GIF'|trans}) }}
		</div>

		{% block image %}{% endblock %}
		{{ form_row(form.image, { label: 'Nahrát obrázek'|trans}) }}


		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				<a href="{{ url('admin_slider_list') }}" class="btn-link-style">{{ 'Zpět na přehled'|trans }}</a>
				{{ form_save(sliderItem|default(null), form) }}
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}

{% endblock %}