<h2>Platby</h2>

{% if payments|length %}

	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Název</th>
				<th class="table-col table-col-10 text-center">Viditelné</th>
				<th class="table-col table-col-15 text-right">Cena</th>
				<th class="table-col table-col-20 text-right">Akce</th>
			</tr>
		</thead>
		<tbody>
			{% for payment in payments %}
				<tr>
					<td><a href="{{ url('admin_payment_edit', {id: payment.id}) }}">{{ payment.name }}</a></td>
					<td class="text-center">
						{% if payment.visible %}
							<span class="semaphore semaphore--true"></span>
						{% else %}
							<span class="semaphore semaphore--false"></span>
						{% endif %}
					</td>
					<td class="text-right">{{ payment.price|price }}</td>
					<td class="text-right">
						<a href="{{ url('admin_payment_edit', {id: payment.id}) }}" class="table-action"><i class="fa fa-pencil"></i></a>
						<a href="{{ url('admin_payment_delete', {id: payment.id}) }}" onclick="return confirm('Opravdu chcete tuto platbu smazat?')" class="table-action"><i class="fa fa-times"></i></a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ url('admin_payment_new') }}" class="btn btn-primary mb-1">Vytvořit platbu</a>
{% else %}
	<p>
		Doposud nebyly vytvořeny žádné platby. Nejdříve nějakou <a href="{{ url('admin_payment_new') }}">vytvořte</a>.
	</p>
{% endif %}