{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}{{ 'Superadmin - Nastavení prodeje s/bez DPH'|trans }}{% endblock %}
{% block h1 %}{{ 'Superadmin - Nastavení prodeje s/bez DPH'|trans }}{% endblock %}

{% block main_content %}
	<div class="row">
		<div class="col-xs-12 col-lg-10">
			{{ form_start(form) }}
				<div class="wrap-group">
					{{ form_row(form.type, { 'label': 'Typ vstupní ceny'|trans }) }}
				</div>

				<div class="window-fixed-bar">
 					<div class="window-fixed-bar__buttons">
						{{ form_widget(form.save, { label: 'Uložit změny'|trans}) }}
					</div>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}