{% extends '@SS6Shop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Slevový kupón'|trans }}{% endblock %}
{% block h1 %}{{ 'Slevový kupón'|trans }}{% endblock %}

{% block main_content %}
	{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="wrap-group">
			{{ form_row(form.code, { label: 'Kód'|trans}) }}
			{{ form_row(form.percent, { label: 'Sleva'|trans, symbolAfterInput: '%' }) }}
		</div>

		{% embed '@SS6Shop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
			{% block fixed_bar_content %}
				{{ form_row(form.save, { label: 'Uložit'|trans}) }}
			{% endblock %}
		{% endembed %}
	{{ form_end(form) }}
{% endblock %}