{% extends '@SS6Shop/Admin/Grid/Grid.html.twig' %}

{% block grid_action_cell_type_delete %}
	{% if notAllowedToDeleteCurrencyIds is defined %}
		{% if row is not empty and row.c.id in notAllowedToDeleteCurrencyIds %}
			<span title="{{ 'Tuto měnu nelze smazat, je nastavena jako výchozí nebo je uložena u objednávky'|trans }}"
				class="js-tooltip table-action cursor-help in-action-icons__item" data-toggle="tooltip" data-placement="bottom"
			>
				<i class="fa fa-info"></i>
			</span>
		{% else %}
			{{ gridView.renderBlock('grid_action_cell', {actionColumn: actionColumn, row: row}) }}
		{% endif %}
	{% else %}
		{{ gridView.renderBlock('grid_action_cell', {actionColumn: actionColumn, row: row}) }}
	{% endif %}
{% endblock %}

{% block grid_value_cell_id_exchangeRate %}
	{% if row is empty %}
		<span class="js-inline-edit-cell-value">{{ value }}</span>
		<span title="{{ 'Kurz se zadává jako počet jednotek hlavní měny eshopu ku nastavované měně'|trans }}"
		class="js-tooltip table-action cursor-help in-action-icons__item" data-toggle="tooltip" data-placement="bottom"
		>
			<i class="fa fa-info"></i>
		</span>
	{% elseif row is not empty and row.c.id == defaultCurrency.id %}
		{{ '-' }}
	{% elseif row is not empty and row.c.id != defaultCurrency.id %}
		{% set exchangeRateInfo = (' ' ~ defaultCurrency.symbol ~ ' za 1 '|trans ~ row.c.symbol) %}
		<span class="js-inline-edit-cell-value">{{ value }}</span>{{ exchangeRateInfo }}
	{% endif %}
{% endblock %}

{% block grid_no_data %}
	{{ 'Nebyly nalezeny žádné měny. Nejprve musíte nějakou vytvořit.'|trans }}
{% endblock %}

{% block grid_pager_totalcount %}
	{% set entityName = 'měny'|trans %}
	{{ parent() }}
{% endblock %}

{% block grid_inline_edit_add_button %}
	{% set addEntity = 'Vytvořit měnu'|trans %}
	{{ parent() }}
{% endblock %}