{% extends '@SS6Shop/Admin/Content/Customer/detail.html.twig' %}

{% block title %}- {{ 'Editace zákazníka'|trans }} - {{ user.fullName }}{% endblock %}
{% block h1 %}
	{{ 'Editace zákazníka'|trans }} - {{ user.fullName }}
	<a href="{{ url('admin_customer_loginasuser', { userId: user.id, csrfToken: loginAsUserCsrfToken }) }}" target="_blank" class="btn-link-style">
		{{ 'Přihlásit za uživatele' }}
		<i class="svg svg-forward-page"></i>
	</a>
{% endblock %}

{% block customer_created_at %}
	<div class="form-line">
		<div class="form-line__label">
			{{ 'Datum registrace'|trans }} :
		</div>
		<div class="form-line__side">
			<div class="form-line__item form-line__item--text">
				{{ user.createdAt|formatDateTime }}
			</div>
		</div>
	</div>
{% endblock %}

{% block customer_last_login %}
	<div class="form-line">
		<div class="form-line__label">
			{{ 'Poslední přihlášení'|trans }} :
		</div>
		<div class="form-line__side">
			<div class="form-line__item form-line__item--text">
				{% if user.lastLogin != null %}
					{{ user.lastLogin|formatDateTime }}
				{% else %}
					{{ 'nikdy'|trans }}
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}

{% block customer_domain %}
	<div class="form-line js-change-price-categories">
		<label class="form-line__label">{{ 'Doména'|trans }}:</label>

		<div class="form-line__side">
			<div class="form-line__item form-line__item--text">
				{{ domainIcon(user.domainId) }} {{ getDomainName(user.domainId) }}
			</div>
		</div>
	</div>
{% endblock %}

{% block customer_order_list %}
	{% include '@SS6Shop/Admin/Content/Customer/orderList.html.twig' with {orders: orders} only %}
{% endblock %}