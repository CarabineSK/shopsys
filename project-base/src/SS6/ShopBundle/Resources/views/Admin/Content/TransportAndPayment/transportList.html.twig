<h2>Dopravy</h2>
		
{% if transports|length %}
	
	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Název</th>
				<th class="table-col table-col-10 text-center">Viditelné</th>
				<th class="table-col table-col-15 text-right">Cena</th>
				<th class="table-col table-col-20 text-right">Akce</th>
			</tr>
		</thead>
		<tbody>
			{% for transport in transports %}
				<tr>
					<td><a href="{{ url('admin_transport_edit', {id: transport.entity.id}) }}">{{ transport.entity.name }}</a></td>
					<td class="text-center">
						{% if transport.visible %}
							<span class="semaphore semaphore--run"></span>
						{% else %}
							<span class="semaphore semaphore--stop"></span>
						{% endif %}
					</td>
					<td class="text-right">{{ transport.entity.price|price }}</td>
					<td class="text-right">
						<a href="{{ url('admin_transport_edit', {id: transport.entity.id}) }}">Upravit</a>
						<a href="{{ url('admin_transport_delete', {id: transport.entity.id}) }}" onclick="return confirm('Opravdu chcete tuto dopravu smazat?')">Smazat</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ url('admin_transport_new') }}" class="btn btn-primary mb-1">Vytvořit dopravu</a>
{% else %}
	<p>
		Doposud nebyly vytvořeny žádné dopravy. Nejdříve nějakou <a href="{{ url('admin_transport_new') }}">vytvořte</a>.
	</p>
{% endif %}