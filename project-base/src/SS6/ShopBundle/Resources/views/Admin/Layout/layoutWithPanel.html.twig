{% extends '@SS6Shop/Admin/Layout/layout.html.twig' %}

{% block content %}
	<div class="web__container">
		<div class="web__panel">
			<div class="web__panel__in">
				{% block menu_panel %}
					{{ render(controller('SS6ShopBundle:Admin/Menu:panel', {
						route: app.request.get('_route'),
						parameters: app.request.attributes.get('_route_params')
					}	)) }}
				{% endblock %}
			</div>
		</div>

		<div class="web__content">
			{% block breadcrumb %}
				{{ render(controller('SS6ShopBundle:Admin/Breadcrumb:index'	)) }}
			{% endblock %}

			<div class="mt15">
				{{ render(controller('SS6ShopBundle:Admin/FlashMessage:index')) }}
			</div>

			{% if showHeading is not defined or showHeading %}
				<div class="wrap-bar">
					<h1 class="wrap-bar__heading">
						{% block h1 %}{{ 'Administrace'|trans }}{% endblock %}
					</h1>
					{% block btn %}{% endblock %}
				</div>
			{% endif %}

			{% block main_content %}{% endblock %}
		</div>
	</div>
{% endblock %}