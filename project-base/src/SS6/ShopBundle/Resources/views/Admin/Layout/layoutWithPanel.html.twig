{% extends '@SS6Shop/Admin/Layout/layout.html.twig' %}

{% block content %}	
	<div class="main-panel col-xs-12 col-sm-4 col-md-3 col-lg-2">
		{{ render(controller('SS6ShopBundle:Admin/Menu:panel', {
			route: app.request.get('_route'),
			parameters: app.request.attributes.get('_route_params')
		}	)) }}
	</div>

	<div class="main-content col-xs-12 col-sm-8 col-md-9 col-lg-10">
		<ul class="breadcrumb">
			<li>
				<a href="./">Úvodni strana</a>
			</li>

			<li>
				Nastavení
			</li>
		</ul>
		{{ render(controller('SS6ShopBundle:Admin/FlashMessage:index')) }}
		<h1>{% block h1 %}Adminstrace{% endblock %}</h1>
		{% block main_content %}{% endblock %}
	</div>
{% endblock %}