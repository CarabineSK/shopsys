{% block begin %}
<?xml version="1.0" encoding="utf-8"?>
<SHOP>
{% endblock %}

{% block item %}
	<SHOPITEM>
		<ITEM_ID>{{ item.itemId }}</ITEM_ID>
		<PRODUCTNAME>{{ item.productName }}</PRODUCTNAME>
		<DESCRIPTION>{{ item.description|striptags|replace("\n", ' ')|trim }}</DESCRIPTION>
		<URL>{{ item.url }}</URL>
		<PRICE_VAT>{{ item.priceVat|number_format(2, ',', '') }}</PRICE_VAT>
		<DELIVERY_DATE>{{ item.deliveryDate }}</DELIVERY_DATE>
		{% if item.imgUrl -%}
			<IMGURL>{{ item.imgUrl }}</IMGURL>
		{% endif -%}
		{% if item.ean -%}
			<EAN>{{ item.ean }}</EAN>
		{% endif -%}
		{% if item.partno is not null -%}
		<PRODUCTNO>{{ item.partno }}</PRODUCTNO>
		{% endif -%}
		{% if item.manufacturer is not null -%}
			<MANUFACTURER>{{ item.manufacturer }}</MANUFACTURER>
		{% endif -%}
		{% if item.categoryText is not null -%}
			<CATEGORYTEXT>{{ item.categoryText }}</CATEGORYTEXT>
		{% endif -%}
		{% for paramName, paramVal in item.params -%}
			<PARAM>
				<PARAM_NAME>{{ paramName }}</PARAM_NAME>
				<VAL>{{ paramVal }}</VAL>
			</PARAM>
		{% endfor -%}
		{% if item.cpc is not null -%}
			<MAX_CPC>{{ item.cpc }}</MAX_CPC>
		{% endif %}
		{% if item.cpcSearch is not null -%}
			<MAX_CPC_SEARCH>{{ item.cpcSearch }}</MAX_CPC_SEARCH>
		{% endif %}
	</SHOPITEM>
{% endblock %}

{% block end %}
</SHOP>
{% endblock %}


