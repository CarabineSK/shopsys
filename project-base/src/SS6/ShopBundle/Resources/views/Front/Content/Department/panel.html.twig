{% macro departments(departments) %}
	{% if departments|length > 0 %}
		<ul class="list-menu">
			{% for department in departments if department.name != '' %}
				<li class="list-menu__item">
					<a href="{{ url('front_product_department', { departmentId: department.id }) }}" class="list-menu__item__link list-menu__item__link--{{department.level}}">{{ department.name }}</a>
					{{ _self.departments(department.children) }}
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endmacro %}

{{ _self.departments(departments) }}
