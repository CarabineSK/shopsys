{% extends '@SS6Shop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
	<meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
	- {{ 'Přihlášení'|trans }}
{% endblock %}

{% block main_content %}
	{{ form_errors(form) }}

	{{ form_start(form, {attr: {'multipleForm': true}}) }}

		<h1>{{ 'Přihlášení'|trans }}</h1>

		{{ form_errors(form.email) }}
		{{ form_widget(form.email, {attr: {placeholder: 'Uživatelské jméno'|trans}}) }}

		{{ form_errors(form.password) }}
		{{ form_widget(form.password, {attr: {placeholder: 'Heslo'|trans}}) }}

		<label>
			{{ form_widget(form.rememberMe) }}
			{{ 'Zapamatuj si mé přihlášení'|trans }}
			<i class="fa fa-info-circle form-line__info js-tooltip"
				data-toggle="tooltip" data-placement="right"
				title="{{ 'Zapamatujeme si vaše přihlášení na tomto počítači po dobu 30 dní.'|trans }}"
			 ></i>
		</label>

		{{ form_widget(form.login, {label: 'Přihlásit'|trans}) }}

		<a href="{{ url('front_registration_reset_password') }}">{{ 'Zapomněli jste své heslo?'|trans }}</a>

	{{ form_end(form) }}

{% endblock %}