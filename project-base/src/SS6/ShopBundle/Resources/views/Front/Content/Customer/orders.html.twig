{% extends '@SS6Shop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Mé objednávky'|trans }}{% endblock %}

{% block main_content %}
	<h1>{{ 'Mé objednávky'|trans }}</h1>
	<div class="row">
		<div class="col-xs-12 col-lg-12">
			{% if orders|length == 0 %}
				{{ 'Dosud nemáte žádnou objednávku.'|trans }}
			{% else %}
				<div class="table-responsive">
					<table class="table table-striped">
						<tr>
							<th>{{ 'Číslo objednávky'|trans }}</th>
							<th>{{ 'Datum vytvoření'|trans }}</th>
							<th>{{ 'Aktuální stav'|trans }}</th>
							<th>{{ 'Počet položek'|trans }}</th>
							<th>{{ 'Doprava'|trans }}</th>
							<th>{{ 'Platba'|trans }}</th>
							<th>{{ 'Celková cena s DPH'|trans }}</th>
							<th>{{ 'Detail'|trans }}</th>
						</tr>
							{% for order in orders %}
								<tr>
									<td><a href="{{ url('front_customer_order_detail_registered', { orderNumber: order.number }) }}">{{ order.number }}</a></td>
									<td>{{ order.createdAt|formatDate }}</td>
									<td>{{ order.status.name }}</td>
									<td>{{ order.productItemsCount }}</td>
									<td>{{ order.transportName }}</td>
									<td>{{ order.paymentName }}</td>
									<td>{{ order.totalPriceWithVat|priceWithCurrency(order.currency) }}</td>
									<td><a href="{{ url('front_customer_order_detail_registered', { orderNumber: order.number }) }}"><i class="fa fa-search"></i</a></td>
								</tr>
							{% endfor %}

					</table>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
