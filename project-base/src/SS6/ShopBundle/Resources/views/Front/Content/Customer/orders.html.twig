{% extends '@SS6Shop/Front/Layout/layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Mé objednávky'|trans }}{% endblock %}
	{% block content %}
		<h1>{{ 'Mé objednávky'|trans }}</h1>
		<div class="row">
			<div class="col-xs-12 col-lg-12">
				{% if ordersData|length == 0 %}
					{{ 'Dosud nemáte žádnou objednávku.'|trans }}
				{% else %}
					<div class="table-responsive">
						<table class="table table-striped">
							<tr>
								<th>{{ 'Číslo objednávky'|trans }}</th>
								<th>{{ 'Datum vytvoření'|trans }}</th>
								<th>{{ 'Aktuální stav'|trans }}</th>
								<th>{{ 'Počet položek'|trans }}</th>
								<th>{{ 'Doprava'|trans }}</th>
								<th>{{ 'Platba'|trans }}</th>
								<th>{{ 'Celková cena s DPH'|trans }}</th>
								<th>{{ 'Detail'|trans }}</th>
							</tr>
								{% for orderData in ordersData %}
									<tr>
										<td><a href="{{ url('front_customer_order_detail_registered', { orderNumber: orderData.number }) }}">{{ orderData.number }}</a></td>
										<td>{{ orderData.createdAt|date('d-m-Y') }}</td>
										<td>{{ orderData.statusName }}</td>
										<td>{{ orderData.itemsCount }}</td>
										<td>{{ orderData.transportName }}</td>
										<td>{{ orderData.paymentName }}</td>
										<td>{{ orderData.totalPriceWithVat|price }}</td>
										<td><a href="{{ url('front_customer_order_detail_registered', { orderNumber: orderData.number }) }}"><i class="fa fa-search"></i</a></td>
									</tr>
								{% endfor %}

						</table>
					</div>
				{% endif %}
			</div>
		</div>
	{% endblock %}
