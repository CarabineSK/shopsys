<ul class="search__hint" id="js-search-autocomplete-list">
	{% for product in productsPaginationResult.results %}
		<li class="search__hint__item">
			<a href="{{ url('front_product_detail', { id: product.id }) }}" class="search__hint__item__link">
				<span class="search__hint__image">
					<img src="{{ imageUrl(product, 'thumbnail') }}" title="{{ product.name }}" width="30" />
				</span>
				<span class="search__hint__name js-search-autocomplete-item-label">{{ product.name }}</span>
			</a>
		</li>
	{% endfor %}

	{% if productsPaginationResult.totalCount > 0 %}
		<li class="search__hint__item search__hint__item--info">
			{% transchoice productsPaginationResult.totalCount with {'%totalProductCount%': productsPaginationResult.totalCount} %}
				{0} Nebyl nalezen žádný produkt
				|
				{1} Celkem nalezen 1 produkt
				|
				[2,4] Celkem nalezeny %totalProductCount% produkty
				|
				[5,Inf] Celkem nalezeno %totalProductCount% produktů
			{% endtranschoice %}
		</li>

		<li class="search__hint__item search__hint__item--info">
			<a href="{{ url('front_product_search', { q: searchText }) }}">
				{{ 'Zobrazit všechny výsledky'|trans }}
			</a>
		</li>
	{% endif %}
</ul>