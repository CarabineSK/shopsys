<div class="col-sm-12 col-md-4">
	<div class="wrap-box">
		<h2 class="mt-0">{{ 'Přehled zboží v košíku'|trans }}</h2>
		<table class="list-cart-preview">
			<tbody>

				{% for cartItemKey, cartItem in orderPreview.cartItems %}
					{% set cartItemPrice = orderPreview.cartItemsPrices[cartItemKey] %}
					<tr class="list-cart-preview__row">
						<td class="list-cart-preview__cell">
							<strong>{{ cartItem.quantity }} x</strong> {{ cartItem.name }}
						</td>
						<td class="list-cart-preview__cell list-cart-preview__cell--price">
							{{ cartItemPrice.totalPriceWithVat|price }}
						</td>
					</tr>
				{% endfor %}

				{% if orderPreview.transport is not empty %}
					<tr class="list-cart-preview__row">
						<td class="list-cart-preview__cell">
							{{ 'Způsob dopravy'|trans }}: {{ orderPreview.transport.name }}
						</td>
						<td class="list-cart-preview__cell list-cart-preview__cell--price">
							{{ orderPreview.transportPrice.priceWithVat|priceText }}
						</td>
					</tr>
				{% endif %}

				{% if orderPreview.payment is not empty %}
					<tr class="list-cart-preview__row">
						<td class="list-cart-preview__cell">
							{{ 'Způsob platby'|trans }}: {{ orderPreview.payment.name }}
						</td>
						<td class="list-cart-preview__cell list-cart-preview__cell--price">
							{{ orderPreview.paymentPrice.priceWithVat|priceText }}
						</td>
					</tr>
				{% endif %}

				<tr class="list-cart-preview__row list-cart-preview__row--total list-cart-preview__row--important">
					<td class="list-cart-preview__cell">
						{{ 'Cena celkem s DPH'|trans }}:
					</td>
					<td class="list-cart-preview__cell list-cart-preview__cell--price">
						{{ orderPreview.totalPriceWithVat|price }}
					</td>
				</tr>

				<tr class="list-cart-preview__row list-cart-preview__row--total">
					<td class="list-cart-preview__cell">
						{{ 'Cena celkem bez DPH'|trans }}:
					</td>
					<td class="list-cart-preview__cell list-cart-preview__cell--price">
						{{ orderPreview.totalPriceWithoutVat|price }}
					</td>
				</tr>

				<tr class="list-cart-preview__row list-cart-preview__row--total">
					<td class="list-cart-preview__cell">
						{{ 'Celková výše DPH'|trans }}:
					</td>
					<td class="list-cart-preview__cell list-cart-preview__cell--price">
						{{ orderPreview.totalPriceVatAmount|price }}
					</td>
				</tr>

			</tbody>
		</table>
	</div>
</div>