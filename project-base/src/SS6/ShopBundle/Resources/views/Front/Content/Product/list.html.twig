{% extends '@SS6Shop/Front/Layout/layout.html.twig' %}

{% block title %}
	- Katalog zboží
{% endblock %}

{% block content %}
	<h1>Katalog zboží</h1>

	<ul class="list-items">
		{% for productDetail in productDetails %}
			<li class="list-items__item col-xs-12 col-sm-6 col-md-4">
				<a href="{{ url('front_product_detail', {'id': productDetail.product.id}) }}" class="list-items__block">
					<div class="list-items__image">
						<span>
							{% if imageExists(productDetail.product, 'default') %}
								{{ image(productDetail.product, { size: 'default', height: '200px' }) }}
							{% else %}
								<img src="{{ asset('assets/frontend/images/bez.jpg') }}" alt="{{ productDetail.product.name }}">
							{% endif %}
						</span>
					</div>
					<h2 class="list-items__title">
						{{ productDetail.product.name }}
					</h2>
					<div class="list-items__price">
						<dl class="list-params-side">
							<dt class="list-params-side__title">
								Cena s DPH:
							</dt>
							<dd class="list-params-side__definition price-main price-big">
								{{ productDetail.basePrice.priceWithVat|price }}
							</dd>
						</dl>
						<dl class="list-params-side">
							<dt class="list-params-side__title">
								Cena bez DPH:
							</dt>
							<dd class="list-params-side__definition">
								{{ productDetail.basePrice.priceWithoutVat|price }}
							</dd>
						</dl>
					</div>
				</a>
				<div class="list-items__actions">
					{{ render(controller('SS6ShopBundle:Front/Cart:addProductForm', {product: productDetail.product})) }}
				</div>
			</li>
		{% endfor %}
	</ul>

{% endblock %}