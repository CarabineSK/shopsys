{% extends '@SS6Shop/Front/Layout/layout.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		{% for payment in payments %}
			{% for transport in payment.transports %}
				$.fn.SS6.order.addPaymentTransportRelation({{ payment.id }}, {{ transport.id }});
			{% endfor %}
		{% endfor %}
	</script>
{% endblock %}

