<div id="cart-box" class="cart-box" data-reload-url="{{ url('front_cart_box') }}" >
	<a class="cart-box__block" href="{{ url('front_cart') }}">
		<strong>{{ 'Košík'|trans }}</strong>
		<div class="cart-box__info">
			{% if cart.isEmpty %}
				{{ 'Váš nákupní košík je prázdný'|trans }}
			{% else %}
				{% transchoice cart.itemsCount with { '%itemsCount%': cart.itemsCount, '%priceWithVat%': productsPrice.priceWithVat|price } %}
					{1} <strong class="cart-box__state">%itemsCount%</strong> položka za <strong class="cart-box__state">%priceWithVat%</strong>
					|[2,4] <strong class="cart-box__state">%itemsCount%</strong> položky za <strong class="cart-box__state">%priceWithVat%</strong>
					|[5,Inf] <strong class="cart-box__state">%itemsCount%</strong> položek za <strong class="cart-box__state">%priceWithVat%</strong>
				{% endtranschoice %}
			{% endif %}
		</div>

	</a>
</div>