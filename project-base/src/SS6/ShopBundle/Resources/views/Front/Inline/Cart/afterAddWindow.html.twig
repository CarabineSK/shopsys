{{ render(controller('SS6ShopBundle:Front/FlashMessage:index')) }}
{% import '@SS6Shop/Front/Content/Product/productListMacro.html.twig' as productList %}

{% if isModuleEnabled(ACCESSORIES_ON_BUY) %}
	{% if accessoryDetails|length > 0 %}
		<div class="wrap-box margin-top-20 margin-bottom-0">
			<h3 class="wrap-box__title">
				{{ 'Naši zákaznící k tomuto produktu nejčastěji nakupují'|trans }}
			</h3>
			<div class="wrap-box__in">
				{{ productList.list(accessoryDetails, 'list-products--in-window') }}
			</div>
		</div>
		<span class="js-add-product-wide-window" data-wide="true"></span>
	{% endif %}
{% endif %}
<span class="js-add-product-url-cart" data-url="{{ url('front_cart') }}"></span>
